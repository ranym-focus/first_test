{
  "flake8": {
    "maxLineLength": 88,
    "exclude": [
      "build/",
      "dist/",
      ".venv/",
      "**/__pycache__/**"
    ],
    "extendIgnore": [
      "W503"
    ],
    "maxComplexity": 9
  },
  "pylint": {
    "loadPlugins": [
      "pylint.extensions.mccabe"
    ],
    "disable": [
      "C0114",
      "C0115",
      "C0116"
    ],
    "maxLineLength": 88,
    "goodNames": [
      "i",
      "j",
      "k",
      "id",
      "cls",
      "self",
      "config",
      "db"
    ]
  },
  "eslint": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "unused-imports",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-magic-numbers": [
        "error",
        {
          "ignore": [0, 1, -1, 2],
          "ignoreArrayIndexes": true
        }
      ],
      "complexity": [
        "error",
        {
          "max": 9
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "no-duplicate-imports": "error",
      "max-lines-per-function": [
        "error",
        {
          "max": 60
        }
      ],
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2
  },
  "black": {
    "lineLength": 88,
    "targetVersion": [
      "py39",
      "py38",
      "py37",
      "py310"
    ],
    "skipStringNormalization": false
  },
  "mypy": {
    "strict": true,
    "ignoreMissingImports": true,
    "warnUnusedConfigs": true,
    "disallowUntypedDefs": true,
    "disallowIncompleteArgs": true,
    "checkUntypedDefns": true,
    "noImplicitOptional": true
  },
  "tsconfig": {
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*",
      "e2e/**/*",
      "init_db.py"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  },
  "coverage": {
    "python": {
      "enabled": true,
      "threshold": 80,
      "strategy": "per-file-coverage",
      "reporters": [
        "text",
        "xml",
        "html"
      ]
    },
    "typescript": {
      "enabled": true,
      "threshold": 80,
      "strategy": "per-file-coverage",
      "reporters": [
        "text",
        "xml",
        "html"
      ]
    }
  },
  "complexity": {
    "limits": {
      "cyclomaticComplexity": 9,
      "nestingDepth": 3
    }
  },
  "codeStyleGuidelines": {
    "python": {
      "docstringStyle": "Google",
      "lineLength": 88,
      "formattingTool": "Black"
    },
    "typescript": {
      "quoteStyle": "single",
      "semi": true,
      "trailingComma": "all"
    }
  },
  "dependencyVulnerabilityScanning": {
    "pip": {
      "enabled": true,
      "failOn": [
        "CRITICAL",
        "HIGH"
      ],
      "ignorePipfileLock": false
    },
    "npm": {
      "enabled": true,
      "failOn": [
        "CRITICAL",
        "HIGH"
      ]
    },
    "safety": {
      "enabled": true
    }
  },
  "sonarqube": {
    "projectKey": "CODE_QUALITY_PROJECT",
    "projectName": "Code Quality Project",
    "projectVersion": "1.0.0",
    "sources": [
      "init_db.py",
      "e2e.spec.ts",
      "src/**",
      "tests/**"
    ],
    "exclusions": [
      "node_modules/**",
      "dist/**",
      "build/**"
    ],
    "qualityProfile": {
      "name": "Custom Quality Profile",
      "rules": [
        {
          "key": "duplicate-code",
          "severity": "CRITICAL"
        },
        {
          "key": "magic-numbers",
          "severity": "MINOR"
        }
      ]
    },
    "duplicationDetection": true
  },
  "codeClimate": {
    "version": 2,
    "enabled": true,
    "config": {
      "exclude_paths": [
        "node_modules/**",
        "dist/**",
        "build/**"
      ],
      "thresholds": {
        "complexity": 9,
        "coverage": 80
      },
      "plugins": [
        "flake8",
        "eslint",
        "black",
        "mypy"
      ]
    }
  },
  "smellsAndRules": {
    "duplicateCode": {
      "files": [
        "init_db.py"
      ],
      "severity": "high",
      "description": "Detect and refactor duplicated logic in initialization routines."
    },
    "magicNumbers": [
      {
        "file": "init_db.py",
        "severity": "low",
        "description": "Replace hard-coded numbers with named constants or configuration."
      },
      {
        "file": "e2e.spec.ts",
        "severity": "low",
        "description": "Replace magic literals with named constants and explain test parameters."
      }
    ]
  },
  "tools": {
    "recommended": [
      "Flake8",
      "SonarQube",
      "ESLint",
      "Prettier",
      "Black",
      "mypy",
      "CodeClimate",
      "Pylint",
      "TypeScript"
    ]
  }
}