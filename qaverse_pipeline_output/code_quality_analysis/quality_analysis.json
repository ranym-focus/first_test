{
  "flake8": {
    "enabled": true,
    "max_line_length": 100,
    "exclude": ["*/migrations/*", "*/venv/*", "node_modules/*", "__pycache__/*"],
    "extend_ignore": ["E203", "W503"],
    "plugins": ["flake8-duplicates", "flake8-magic-numbers"],
    "per_file_ignores": {
      "init_db.py": ["D100", "D101", "D102"]
    }
  },
  "pylint": {
    "enabled": true,
    "rcfile": "./.pylintrc",
    "max_line_length": 100,
    "max_nested_blocks": 3,
    "load_plugins": ["pylint.extensions.mccabe"],
    "disable": [],
    "good_names": ["i", "j", "k", "e", "db", "ctx", "config"]
  },
  "mypy": {
    "enabled": true,
    "strict": true,
    "ignore_missing_imports": true,
    "warn_return_any": true
  },
  "eslint": {
    "enabled": true,
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": ["@typescript-eslint", "no-magic-numbers", "import", "sonarjs"],
    "rules": {
      "complexity": ["error", 9],
      "max-depth": ["error", 3],
      "no-magic-numbers": [
        "error",
        {
          "ignore": [0, 1, -1],
          "ignoreArrayIndexes": true
        }
      ],
      "no-console": "warn",
      "max-len": ["error", { "code": 100 }],
      "no-duplicate-imports": "error"
    },
    "overrides": [
      {
        "files": ["*.ts", "*.tsx"],
        "parser": "@typescript-eslint/parser",
        "rules": {
          "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
        }
      }
    ]
  },
  "prettier": {
    "enabled": true,
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "black": {
    "enabled": true,
    "line_length": 88
  },
  "typescript": {
    "enabled": true,
    "tsconfig_path": "./tsconfig.json",
    "strict": true,
    "noEmit": true
  },
  "sonarqube": {
    "enabled": true,
    "host_url": "http://sonarqube.local",
    "project_key": "ProjectKey",
    "project_name": "ProjectName",
    "sources": ["src", "tests", "e2e"],
    "languages": ["py", "ts", "js"],
    "duplication": {
      "enabled": true,
      "threshold": 3.0
    },
    "encoding": "utf-8"
  },
  "codeclimate": {
    "enabled": true,
    "config": {
      "quality_checks": ["Flake8", "ESLint", "Pylint", "Mypy"],
      "exclude_paths": ["tests/**", "venv/**", "node_modules/**"],
      "minimum_coverage": 80
    }
  },
  "coverage": {
    "tool": "pytest-cov",
    "minimum_coverage_percent": 80,
    "report_formats": ["text", "html", "xml"],
    "ci_integration": true
  },
  "dependency_scanning": {
    "enabled": true,
    "tools": ["pip-audit", "npm-audit", "snyk"],
    "ci_integration": true,
    "report_format": "json",
    "update_policy": "auto"
  }
}